{% extends 'base.html.twig' %}
{% block body %}

    {% block javascripts %}
        {% javascripts '@AppBundle/Resources/public/js/AAA.js' %}

        <script src="{{ asset_url }}"></script>
        <script type="text/javascript">
            $(document).ready(function(){
                $('#company_id').hide();
            });
        </script>
        {% endjavascripts %}
    {% endblock %}


    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <div class="page-header">
            <h2>Edit ship</h2>
            <a href="{{ path('shipdetails_select1') }}">Back</a>
        </div>
        <div class="bs-example">
            {{ form_start(edit_form, {'attr': {'class': 'form-horizontal no-style'}}) }}
            <div class="form-group">
                <label class="control-label col-xs-2">Ship Name</label>
                <div class="col-xs-10">
                    {{  form_widget(edit_form.shipName) }}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-2">ShipType</label>
                <div class="col-xs-10">
                    {{  form_widget(edit_form.shipType) }}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-2">IMO</label>
                <div class="col-xs-10">
                    {{  form_widget(edit_form.imoNumber) }}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-2">Country</label>
                <div class="col-xs-10">
                    {{  form_widget(edit_form.country) }}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-2">Location</label>
                <div class="col-xs-10">
                    {{  form_widget(edit_form.location) }}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-2">Built</label>
                <div class="col-xs-10">
                    {{  form_widget(edit_form.built) }}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-2">Size</label>
                <div class="col-xs-10">
                    {{  form_widget(edit_form.size) }}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-2">GT</label>
                <div class="col-xs-10">
                    {{  form_widget(edit_form.gt) }}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-2">Description</label>
                <div class="col-xs-10">
                    {{  form_widget(edit_form.description) }}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-2">Year of Manufacturing</label>
                <div class="col-xs-10">
                    {{  form_widget(edit_form.manufacturingYear) }}
                </div>
            </div>
            {{ form_row(edit_form.companyDetailsId,{'id':'company_id','label': ' '}) }}
            <div class="actions">
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>
            {{ form_end(edit_form) }}
        </div>
    </div>
{% endblock %}