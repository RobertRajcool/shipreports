{% extends 'base.html.twig' %}

{% block body %}

    {% block javascripts %}

        {% javascripts
        '@AppBundle/Resources/public/js/AAA.js'
        '@AppBundle/Resources/public/js/demo.js'
        '@AppBundle/Resources/public/js/actions-builder.js'
        '@AppBundle/Resources/public/js/Element_conditions-builder.js'
        '@AppBundle/Resources/public/js/rules.js'
        '@AppBundle/Resources/public/js/sample.js'

        %}

        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}

    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <div class="page-header">
            <h2>Rules Creation</h2>
            <a href="{{ path('rules_select') }}">Back</a>
        </div>

        <div class="bs-example">
            <form class="form-horizontal no-style" action="{{ path('rules_new1') }}" method="post">
                <div class="form-group">
                    <label class="control-label col-xs-2">Kpi Name</label>
                    <div class="col-xs-10">
                        {{ form_widget(form.kpiDetailsId,{'id' :'jsid','label':' '}) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-2">Element Name</label>
                    <div class="col-xs-10">
                        {{ form_widget(form.elementDetailsId,{'id' :'element','label':' '}) }}
                    </div>
                </div>
                <div class="form-group">
                    {#<label class="control-label col-xs-2">Rule</label>#}
                    <div class="col-xs-10">
                        {{ form_row(form.rules,{'id' :'result'}) }}
                    </div>
                </div>

                <div style="margin-left: 5%" id="conditions"></div>
                <div id="actions"></div>
                <div class="add_button_place"></div>
                <p id="text_box"></p>
                <input type="hidden" id="result" name="value">

                <table id="rule-table">
                    <tr id="row_id">
                        <th>Conditions</th>
                        <th>Color</th>
                    </tr>
                </table>

                <div class="actions">
                    <input class="btn btn-primary" type="submit" value="Create" id="submit_id" />
                </div>
            </form>
        </div>
    </div>

    {% endblock %}
{% endblock %}