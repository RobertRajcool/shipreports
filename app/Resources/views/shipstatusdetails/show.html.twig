{% extends 'base.html.twig' %}

{% block body %}
    <h1>ShipStatusDetails</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ shipStatusDetail.id }}</td>
            </tr>
            <tr>
                <th>Activedate</th>
                <td>{% if shipStatusDetail.activeDate %}{{ shipStatusDetail.activeDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Enddate</th>
                <td>{% if shipStatusDetail.endDate %}{{ shipStatusDetail.endDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('shipstatusdetails_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
