{% extends 'base.html.twig' %}

{% block body %}
    <h1>CompanyUsers</h1>

    <table>
        <tbody>
            <tr>
                <th>Username</th>
                <td>{{ companyUser.userName }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ companyUser.role }}</td>
            </tr>
            <tr>
                <th>Emailid</th>
                <td>{{ companyUser.emailId }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('companyusers_select') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('companyusers_edit', { 'id': companyUser.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
