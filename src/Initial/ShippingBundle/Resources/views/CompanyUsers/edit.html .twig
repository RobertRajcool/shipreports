{% extends 'base.html.twig' %}


{% block body %}

    {% block javascripts %}
        {% javascripts '@AppBundle/Resources/public/js/*' %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
       {% endblock %}


    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <div class="page-header">
      <h2>Company User Edit</h2>
            <a href="{{ path('fos_user_registration_show') }}">Back</a>
            </div>

<form  class="form-horizontal no-style" action="{{ path('company_edit') }}" method="post">


    <input type="hidden" name="fos_user[id]" value="{{ userdetails.id }}" hidden>

    <div class="form-group">
        <label class="control-label col-xs-2">Email</label>
        <div class="col-xs-10">
    <input type="text" name="fos_user[email]" value="{{ userdetails.email }}">
        </div>
        </div>

    <div class="form-group">
        <label class="control-label col-xs-2">Username</label>
        <div class="col-xs-10">
            <input type="text" name="fos_user[username]" value="{{ userdetails.username }}">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-xs-2">Roles</label>
        <div class="col-xs-10">
            {{ form_row(edit_form.roles[0],{'attr': {'name': 'roles'}}) }}

        </div>
    </div>
    <div class="actions">
    <input type="submit" class="btn btn-primary" value="Edit" />
</div>

 </form>
        </div>

{% endblock %}