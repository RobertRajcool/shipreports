                                        var temp=1

                                        $('<table class="table kpi_table_form_section"><thead><tr><th colspan="'+data.elementcount+'">'+i+'</th></tr></thead> <tbody id="tablebody'+j+'">').appendTo('#addkpiformid');
                                        $.each(listkpi,function(mykey,myvalue)
                                        {
                                            if(valuearray.length>0)
                                            {

                                                $('#updatebuttonid').show();
                                                $('#savebuttonid').hide();

                                                if(temp==1)
                                                {
