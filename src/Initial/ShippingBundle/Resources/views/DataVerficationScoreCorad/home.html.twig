                                                    }
                                                    newtemp++;
                                                    temp++;

                                                });
                                                $(' </tbody></table>').appendTo('#addkpiformid');



                                            }
                                            j++;


                                        });
                                            alert(data.returnmsg);
                                        }
                                        else
                                        {
                                            $('#shipid').val(' ');
                                            $('#shipname').text(' ');
                                            $('#nogroupselected').show();
                                            $('#kpiformforship').hide();
                                            alert(data.returnmsg);
                                        }


